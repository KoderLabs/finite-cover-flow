<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000">

        <KeyFrameSet>
            <!-- Circle -->
            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                motion:motionTarget="@id/bg_circle"
                motion:transitionEasing="accelerate" />

            <KeyAttribute
                android:scaleX="6"
                android:scaleY="6"
                motion:framePosition="100"
                motion:motionTarget="@id/bg_circle"
                motion:transitionEasing="accelerate" />

            <!-- Text View -->
            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/title_text_view"
                motion:transitionEasing="accelerate">
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="#fff" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/title_text_view"
                motion:transitionEasing="accelerate">
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="#000" />
            </KeyAttribute>
<!--

            &lt;!&ndash; Button &ndash;&gt;
            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/button"
                motion:transitionEasing="accelerate">
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="#000" />
                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#fff" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/button"
                motion:transitionEasing="accelerate">
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="#fff" />
                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#000" />
            </KeyAttribute>
-->

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bg_circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_drawable"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#dedede"
            android:textSize="18sp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/pager_container"
            motion:layout_constraintTop_toTopOf="parent"  />

        <!--<Constraint
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Add to Card"
            android:background="#000"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/pager"
            motion:layout_constraintTop_toTopOf="parent" />-->

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bg_circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_drawable"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000"
            android:textSize="18sp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/pager_container"
            motion:layout_constraintTop_toTopOf="parent"  />
