<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/flow" />

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/fs">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/eh">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/ev">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/oh">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/ov">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/flow">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:constraint_referenced_ids="fs,eh,ev,oh,ov"
                motion:flow_maxElementsWrap="1"
                motion:flow_verticalStyle="spread_inside"
                motion:flow_wrapMode="aligned"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/fs">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/eh">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/ev">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/oh">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/ov">
            <Layout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Fullscreen Slider"
                tools:ignore="MissingConstraints" />
        </Constraint>
        <Constraint android:id="@+id/flow">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:constraint_referenced_ids="fs,eh,ev,oh,ov"
                motion:flow_maxElementsWrap="1"
                motion:flow_verticalStyle="packed"
                motion:flow_wrapMode="aligned"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
    </ConstraintSet>
</MotionScene>